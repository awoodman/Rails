<p style="color: green"><%= notice %></p>

<table>
  <tr>
    <th>Title</th>
    <th>Due Date</th>
    <th>Status</th>    
    <th>Description</th>  
  </tr>
  <tr>
    <td><%= @todo_item.task_title %></td>
    <td><%= @todo_item.due_date %></td>
    <td><%= @todo_item.done? %></td>
    <td><%= @todo_item.description %></td>
  </tr>
</table>

<div>
  <%= link_to "Edit this todo item", edit_todo_list_todo_item_path(@todo_item) %> |
  <%= link_to "Back to todo items", todo_list_todo_items_path %>

  <%= button_to "Destroy this todo item", todo_list_todo_item_path(@todo_item), method: :delete %>
</div>
