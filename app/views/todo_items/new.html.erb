<h1>Add Todo Item(s) for List: <%= @todo_list.list_name %></h1>

<br>

<%= form_with(model: @todo_item, local: true, url: [@todo_list, @todo_item]) do |form| %>
  <div class="field">
    <%= form.label :task_title %>
    <%= form.text_field :task_title %>
  </div>

  <div class="field">
    <%= form.label :due_date %>
    <%= form.text_field :due_date %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, size: "40x12" %>
  </div>

  <div class="actions">
    <%= form.submit "Add To List" %>
  </div>
<% end %>

<div>
  <%= link_to "Cancel", todo_list_path(@todo_list) %>
</div>